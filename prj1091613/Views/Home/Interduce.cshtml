@model IEnumerable<prj1091613.Models.TableIntroductions1091613>

@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "簡介區";
}

<link href="~/Content/PagedList.css" rel="stylesheet" />

<h2>簡介區</h2>

<style>
    body {
        cursor: url('../images/prj.ico'),auto
    }
</style>

@if (Model.Count() == 0)
{

    <div class="alert alert-info">
        <strong>無簡介紀錄</strong>
        <a href="/Home/InCreate" style="float:right">新增簡介</a>
    </div>
}
else
{
    <style>
        tr:nth-child(odd) {
            color: black;
            background-color: lightgreen;
        }

        tr:nth-child(even) {
            color: black;
            background-color: white;
        }
    </style>
    <a href="/Home/InCreate" class="btn btn-info" style="float:right">新增簡介</a>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IGrander)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ISchool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Iabout)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IGrander)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISchool)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Iabout)
                </td>
                <td>
                    <a href="@Url.Action("InEdit")?IName=@item.IName" class="btn btn-warning">編輯</a>
                    <a href="@Url.Action("InDelete")?IName=@item.IName"
                       class="btn btn-danger"
                       onclick="return confirm('確定要刪除 @item.IName 的簡介紀錄嗎?');">
                        刪除
                    </a>
                </td>
            </tr>
        }

    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Interduce", new { page }))
}
